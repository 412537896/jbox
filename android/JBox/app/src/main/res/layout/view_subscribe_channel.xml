<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_sub_channel_head"
    android:minHeight="@dimen/sub_channel_head_height">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_dev_icon"
        android:layout_width="@dimen/sub_channel_circle_width"
        android:layout_height="@dimen/sub_channel_circle_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        tools:src="@drawable/default_avatar"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_dev_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:text="devName"
        />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:text="@string/channel_dev_description"
        />


</RelativeLayout>
